<div class="d-flex justify-content-between align-items-start">
  <h1><%= @task.title %></h1>
  <%= link_to edit_task_path(@task), class: "text-decoration-none text-reset" do %>
    <button class="btn btn-light mb-2">
      <i class="fa-solid fa-pen-to-square"></i>
      Edit this task
    </button>
  <% end %>
</div>

<p class="border rounded bg-light p-2"><%= @task.details %></p>

<p>
  <% if @task.completed %>
    <i class="fa-regular fa-circle-check"></i>
    This task is completed
  <% else %>
    <i class="fa-regular fa-circle"></i>
    This task is not completed yet
  <% end %>
</p>

<hr>

<p>
  <i class="fa-solid fa-arrow-rotate-left"></i>
  <%= link_to "Back to list", tasks_path %>
</p>
